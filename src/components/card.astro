---
import { Image } from "astro:assets";

import logojpg from "../media/logojpg.jpg";

const { image = logojpg } = Astro.props;
const { title = "Set a Title" } = Astro.props;
const { content = "Set the content" } = Astro.props;
---

<div
    class="card my-card max-h-[85dvh] lg:h-96 lg:card-side bg-base-100 shadow-sm border-1 border-slate-900 hover:sm:-translate-y-3 hover:border-slate-700 border-box -border-spacing-1 transition duration-150 ease-in-out"
>
    <figure>
        <Image
            src={image}
            alt="card"
            class="object-cover w-full min-[791px]:w-80 lg:w-60"
        />
    </figure>
    <div class="card-body w-full min-[791px]:w-80 lg:w-70">
        <h2 class="card-title text-nowrap text-2xl text-center">{title}</h2>
        <p class="text-lg text-pretty">{content}</p>
    </div>
</div>
<style scoped>
    .my-card:hover {
        box-shadow:
            0 0 2rem rgba(0, 0, 0, 0.75),
            0 0 4rem rgba(0, 0, 0, 0.5),
            0 2rem 8rem rgba(0, 0, 0, 0.25);
        filter: brightness(1.25);
    }
</style>
