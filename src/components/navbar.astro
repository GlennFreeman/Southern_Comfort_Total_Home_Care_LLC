---
import Image from "astro/components/Image.astro";
import logojpg from "../media/logojpg.jpg";
---

<div class="drawer-end fixed w-full z-10">
    <input id="link-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
        <!-- Navbar -->
        <nav class="navbar justify-between bg-base-300 h-16">
            <div class="flex">
                <a href="./" class="btn btn-ghost text-balance"
                    ><span class="font-serif font-bold text-primary"
                        >Southern Comfort</span
                    >
                    <span class="font-sans font-thin text-sm italic"
                        >Total Home Care</span
                    ></a
                >
            </div>
            <div class="flex-shrink min-[791px]:hidden">
                <label
                    for="link-drawer"
                    aria-label="open sidebar"
                    class="btn btn-square btn-ghost"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        class="inline-block h-6 w-6 stroke-current"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </label>
            </div>
            <div class="hidden flex-shrink min-[791px]:flex">
                <ul class="menu menu-horizontal justify-center items-center">
                    <!-- Navbar menu content here -->
                    <li>
                        <a class="tooltip tooltip-bottom" data-tip="Home"
                            ><Image
                                src={logojpg}
                                alt="logo and home link"
                                loading={"eager"}
                                class="rounded-full object-scale-down h-6 w-6"
                            /></a
                        >
                    </li>
                    <li><a>Services</a></li>
                    <li><a>Service Area</a></li>
                    <li><a>About Us</a></li>
                    <li><a>Contact Us</a></li>
                    <li>
                        <a
                            href="tel:6785020680"
                            class="flex max-lg:tooltip max-lg:tooltip-bottom"
                            data-tip="(678) 502-0680"
                            ><svg
                                class="hidden h-4 min-[791px]:flex"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                ><path
                                    d="M21.384,17.752a2.108,2.108,0,0,1-.522,3.359,7.543,7.543,0,0,1-5.476.642C10.5,20.523,3.477,13.5,2.247,8.614a7.543,7.543,0,0,1,.642-5.476,2.108,2.108,0,0,1,3.359-.522L8.333,4.7a2.094,2.094,0,0,1,.445,2.328A3.877,3.877,0,0,1,8,8.2c-2.384,2.384,5.417,10.185,7.8,7.8a3.877,3.877,0,0,1,1.173-.781,2.092,2.092,0,0,1,2.328.445Z"
                                ></path></svg
                            ><span
                                class="text-slate-300 underline hidden lg:flex"
                                >(678) 502-0680</span
                            ></a
                        >
                    </li>
                    <li>
                        <a
                            href="mailto:southerncomforttotalhomecare@gmail.com"
                            class="flex max-lg:tooltip max-lg:tooltip-bottom"
                            data-tip="Email"
                        >
                            <svg
                                class="hidden h-4 min-[791px]:flex"
                                viewBox="0 -3 20 20"
                                xmlns="http://www.w3.org/2000/svg"
                                ><g
                                    stroke-linecap="round"
                                    stroke-linejoin="round"></g><path
                                    d="M10 12.474 0 3.649V15h20V3.649zm.001-2.662L0 .981V0h20v.981z"
                                    fill="#fff"
                                    fill-rule="evenodd"></path></svg
                            >
                            <span
                                class="text-slate-300 underline hidden lg:flex"
                                >Email</span
                            ></a
                        >
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <nav class="drawer-side">
        <label
            for="link-drawer"
            aria-label="close sidebar"
            class="drawer-overlay"></label>
        <ul
            class="menu flex bg-gradient-to-t from-slate-800 to-base-300 min-h-full w-60 p-4"
        >
            <!-- Sidebar content here -->
            <li>
                <a class="tooltip tooltip-bottom" data-tip="Home"
                    ><Image
                        src={logojpg}
                        alt="logo and home link"
                        loading={"lazy"}
                        class="rounded-full mb-4"
                    /></a
                >
            </li>
            <div class="divider px-6"></div>
            <li class="text-slate-300 px-8"><a>Services</a></li>
            <li class="text-slate-300 px-8"><a>Service Area</a></li>
            <li class="text-slate-300 px-8"><a>About Us</a></li>
            <div class="divider px-6"></div>
            <li class="px-8">
                <a
                    class="btn btn-secondary rounded-full font-bold px-8 mb-2 animate-pulse hover:pb-0.75 hover:saturate-200 hover:animate-none focus:pb-0.75 focus:saturate-200 focus:animate-none active:saturate-50 active:animate-none"
                    >Contact Us</a
                >
            </li>
            <li class="flex justify-center items-center mx-8">
                <a
                    href="tel:6785020680"
                    class="w-full justify-center items-center"
                    ><svg
                        class="h-4"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        ><path
                            d="M21.384,17.752a2.108,2.108,0,0,1-.522,3.359,7.543,7.543,0,0,1-5.476.642C10.5,20.523,3.477,13.5,2.247,8.614a7.543,7.543,0,0,1,.642-5.476,2.108,2.108,0,0,1,3.359-.522L8.333,4.7a2.094,2.094,0,0,1,.445,2.328A3.877,3.877,0,0,1,8,8.2c-2.384,2.384,5.417,10.185,7.8,7.8a3.877,3.877,0,0,1,1.173-.781,2.092,2.092,0,0,1,2.328.445Z"
                        ></path></svg
                    ><span class="text-slate-300 underline">(678) 502-0680</span
                    ></a
                >
            </li>
            <li class="flex justify-center items-center mx-8">
                <a
                    href="mailto:southerncomforttotalhomecare@gmail.com"
                    class="w-full justify-center items-center"
                >
                    <svg
                        class="h-4"
                        viewBox="0 -3 20 20"
                        xmlns="http://www.w3.org/2000/svg"
                        ><g stroke-linecap="round" stroke-linejoin="round"
                        ></g><path
                            d="M10 12.474 0 3.649V15h20V3.649zm.001-2.662L0 .981V0h20v.981z"
                            fill="#fff"
                            fill-rule="evenodd"></path></svg
                    >
                    <span class="text-slate-300 underline">Email</span></a
                >
            </li>
        </ul>
    </nav>
</div>
<div class="h-16 w-full"></div>
<style scoped>
    svg {
        fill: var(--primary-content, #fff);
    }
</style>
